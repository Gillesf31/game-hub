{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@game-hub-monorepo/ui-components-critic-score-ui": [
        "libs/gamehub/ui-component/critic-score/ui/src/index.ts"
      ],
      "@game-hub-monorepo/ui-components-emoji-ui": [
        "libs/gamehub/ui-component/emoji/ui/src/index.ts"
      ]
    }
  }
}
